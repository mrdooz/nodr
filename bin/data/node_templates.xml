<NodeTemplates>
    <Category name="Memory">
        <NodeTemplate name="Load" id="01">
            <Params>
                <Param name="name" type="string"/>
            </Params>
            <Output type="texture"/>
        </NodeTemplate>

        <NodeTemplate name="Store" id="02">
            <Inputs>
                <Input name="sink" type="texture"/>
            </Inputs>
            <Params>
                <Param name="final" type="bool"/>
                <Param name="name" type="string"/>
            </Params>
        </NodeTemplate>
    </Category>

    <Category name="Generators">
        <NodeTemplate name="Fill" id="16">
            <Params>
                <Param name="color" type="color"/>
            </Params>
            <Output type="texture"/>
        </NodeTemplate>

        <NodeTemplate name="RadialGradient" id="17">
            <Params>
                <Param name="center" type="vec2"/>
                <Param name="power" type="float"/>
            </Params>
            <Output type="texture"/>
        </NodeTemplate>

        <NodeTemplate name="LinearGradient" id="18">
            <Params>
                <Param name="pt0" type="vec2"/>
                <Param name="pt1" type="vec2"/>
                <Param name="power" type="float"/>
            </Params>
            <Output type="texture"/>
        </NodeTemplate>

        <NodeTemplate name="Sinus" id="19">
            <Params>
                <Param name="freq" type="float"/>
                <Param name="amp" type="float"/>
                <Param name="power" type="float"/>
            </Params>
            <Output type="texture"/>
        </NodeTemplate>

    </Category>
    <Category name="Modifers">

        <NodeTemplate name="Modulate" id="64">
            <Inputs>
                <Input name="a" type="texture"/>
                <Input name="b" type="texture"/>
            </Inputs>
            <Params>
                <Param name="factor_a" type="float"/>
                <Param name="factor_b" type="float"/>
            </Params>
            <Output type="texture"/>
        </NodeTemplate>

        <NodeTemplate name="RotateScale" id="65">
            <Inputs>
                <Input name="a" type="texture"/>
            </Inputs>
            <Params>
                <Param name="angle" type="float"/>
                <Param name="scale" type="vec2"/>
            </Params>
            <Output type="texture"/>
        </NodeTemplate>

        <NodeTemplate name="Distort" id="66">
            <Inputs>
                <Input name="a" type="texture"/>
                <Input name="b" type="texture"/>
                <Input name="c" type="texture"/>
            </Inputs>
            <Params>
                <Param name="scale" type="float"/>
            </Params>
            <Output type="texture"/>
        </NodeTemplate>

        <NodeTemplate name="ColorGradient" id="67">
            <Inputs>
                <Input name="a" type="texture"/>
            </Inputs>
            <Params>
                <Param name="col_a" type="color"/>
                <Param name="col_b" type="color"/>
            </Params>
            <Output type="texture"/>
        </NodeTemplate>

    </Category>
</NodeTemplates>